<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextBaseWhite" parent="Widget.AppCompat.TextView">
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textSize">@dimen/font_base</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextNavHeaderTitle" parent="TextBaseWhite">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextNavHeaderSub" parent="TextBaseWhite">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black_light40</item>
    </style>
</resources>
