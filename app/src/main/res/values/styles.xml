<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text_base" parent="Widget.AppCompat.TextView">
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textSize">@dimen/font_base</item>
    </style>

    <style name="Text_toolbar_label" parent="Text_base">
        <item name="android:textColor">@color/black_light30</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="Text_toolbar" parent="Text_base">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>

    <style name="Button_ChangeDestination" parent="Text_base">
        <item name="android:textSize">@dimen/font_base</item>
        <item name="android:textColor">@color/black_base</item>
    </style>
</resources>
